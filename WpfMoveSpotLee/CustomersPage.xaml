<Page x:Class="WpfMoveSpotLee.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMoveSpotLee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomersPage">

    <Grid>
        <Grid Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel  HorizontalAlignment="Center" Grid.Column="1">

                <TextBlock Text="customers" Height="47" FontSize="50"/>
                <ListBox x:Name="CustomersGood" Background="Crimson" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
            </StackPanel>
            <Button Width="40" x:Name="insertCu" Click="InsertCustomers" Grid.Column="2" Grid.Row="2"/>
       
        </Grid>
    </Grid>
</Page>
