@page "/ActivityPage"
@inject ApiService api
<h1>Activity</h1>

<div class="container">
    <h2 class=" text-center">רשימת פעילויות</h2>
    @if (activities != null)
    {
        <div class="row">
            @foreach (Activity activity in activities)
            {
                //md4 -   קיצור של מארגין כפתור -יוצר שלוש עמודות
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title text-center">@activity.NameActivity</h3>
                        </div>

                        <div class="card-body">
                            <p class="card-text text-center">מחיר לא מנוי:@activity.PriceNoPremium</p>
                            <p class="card-text text-center">מחיר מנוי:@activity.PricePremium</p>
                            <p class="card-text text-center">מוגבל בזמן?:@activity.TimeLimit</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
<style>
    body {
        background-color: aquamarine;
    }
</style>

@code {
    private ActivityList activities;
    protected override async Task OnInitializedAsync()
    {
        activities = await api.GetActivityList();
    }
}
